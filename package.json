{
  "name": "css-template",
  "version": "1.0.0",
  "description": "My standard template for CSS styling with SASS.",
  "scripts": {
    "clean": "rimraf test/css/*",
    "prebuild": "npm run clean",
    "build": "tsx build-test.ts && sass test/index.scss test/css/index.css",
    "start": "serve test",
    "dev": "npm run build && concurrently \"npm run watch\" \"npm run watch\" \"npm run start\"",
    "watch-css": "onchange \"**/*.scss\" -- sass test/index.scss test/css/index.css",
    "watch-html": "onchange \"**/*.scss\" -- tsx build-test.ts",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dan-schel/css-template.git"
  },
  "author": "dan-schel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dan-schel/css-template/issues"
  },
  "homepage": "https://github.com/dan-schel/css-template#readme",
  "dependencies": {
    "sass": "^1.77.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "concurrently": "^8.2.2",
    "onchange": "^7.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1"
  }
}
